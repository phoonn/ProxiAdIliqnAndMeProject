@model WebStore.Models.LogInModel

<title>Login</title>
<h2>Login</h2>
<div class="body-content container">
    @Html.ValidationSummary(true)

    @using (Html.BeginForm())
    {

        @Html.EditorForModel()
        <br />
        <p><button type="submit" class="btnflt4">Login</button></p>

        <h2>You don't have an account? </h2>
        <p><a href="@Url.Action("Register", "Auth")" class="btnflt4">Register NOW !</a></p>
    }
</div>
